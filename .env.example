# MongoDB connection string (Coolify, Atlas, or local). Must include database name in path.
# Replica set is not required (native driver).
# Example local: mongodb://localhost:27017/growith-arm
# Example Atlas: mongodb+srv://user:pass@cluster.mongodb.net/growith-arm?retryWrites=true&w=majority
# With directConnection: mongodb://user:pass@host:port/growith-arm?directConnection=true
DATABASE_URL="mongodb://user:pass@host:27017/growith-arm?directConnection=true"

# Login credentials for ARM portal (required for /login)
LOGIN_USERNAME="admin"
LOGIN_PASSWORD="admin"

# Secret for signing session cookie (use a long random string in production)
SESSION_SECRET="change-this-to-a-long-random-string-in-production"

# Optional: separate secret for IT Vault password encryption (defaults to SESSION_SECRET)
# VAULT_SECRET="your-vault-encryption-secret"

# Optional: for IT Vault expiry emails (15-day renewal alerts to agencygrowith@gmail.com)
# RESEND_API_KEY="re_..."
# RESEND_FROM_EMAIL="ARM <noreply@yourdomain.com>"
